<Window x:Class="JSONtoCSVWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSONtoCSVWPF"
        mc:Ignorable="d"
        Title="JSON to CSV" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Label Content="JSON Text" FontSize="16" FontWeight="Bold" VerticalAlignment="Top"/>
        <Label Content="CSV Text" VerticalAlignment="Top" Grid.Column="1" FontSize="16" FontWeight="Bold"/>
        <TextBox x:Name="tbJSON" HorizontalAlignment="Left" Height="328" Margin="6,36,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="380"/>
        <TextBox x:Name="tbCSV" HorizontalAlignment="Left" Height="328" Margin="10,36,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="376" Grid.Column="1"/>
        <Button x:Name="btnAction" Content="Button" HorizontalAlignment="Left" Margin="77,380,0,0" VerticalAlignment="Top" Width="203"/>

    </Grid>
</Window>
